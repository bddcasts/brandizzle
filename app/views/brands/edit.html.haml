.grid_6
  %h2=h @brand.name

.grid_6.right
  #delete-brand
    = button_to "Delete brand", brand_path(@brand), :method => :delete, :class => "delete"

.clear

.grid_6
  - form_for [@brand, @search] do |f|
    %fieldset
      %legend Searches
    
      = f.text_field :term
      = f.submit 'Add term'
      
      %hr
      
      %ul#searches
        - @brand.searches.each do |search|
          %li
            =h search.term
            = link_to "Remove", brand_search_path(@brand, search), :method => :delete, :id => dom_id(search, :delete), :class => 'delete'
  
.grid_6
  - form_for @brand do |f|
    %fieldset
      %legend Settings
    
      = render :partial => 'fields', :locals => { :f => f }

      %p
        = f.submit 'Update'
