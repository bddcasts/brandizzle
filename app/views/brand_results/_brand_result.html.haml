%div.result{ :id => brand_result.dom_id, :class => brand_result.read? && "read"}
  %div.status{:style => "background:transparent url('/images/#{brand_result.result.source}.png') no-repeat left center"}
    = brand_result.result.created_at.strftime("%I:%M%p")
    = brand_result.status
    = pluralize(brand_result.comments_count, "comment")
    %p.temperature_links
      = "[ #{brand_result.temperature_links.join(" | ")} ]"
  %div.body
    = auto_link(sanitize(brand_result.result.body), :urls, :html => { :target => '_blank'})
  %div.leenks
    = brand_result.action_links.join(" | ")