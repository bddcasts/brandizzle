%div.result{ :id => brand_result.dom_id, :class => brand_result.read? && "read"}
  %div.links{:style => "background:transparent url('/images/#{brand_result.result.source}.png') no-repeat left center"}
    %div
      = brand_result.brand
    %div.state_links
      = brand_result.state_links.join(" | ")
    %div.temperature_links
      = "[ #{brand_result.temperature_links.join(" | ")} ]"
  %div.body
    = auto_link(sanitize(brand_result.result.body), :urls, :html => { :target => '_blank'})
  %div.result_link
    = brand_result.result_link
  %div.status
    = brand_result.result.created_at.strftime("%I:%M%p")
    = brand_result.status
    = brand_result.view_links.join(" | ")
    