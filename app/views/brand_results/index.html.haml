#sidebar
  %h3 Brands
  %ul
    %li=link_to "All", brand_results_path(merge_search_params({:brand_id_is => nil}))
    - @brands.each do |brand|
      %li= link_to brand.name, brand_results_path(merge_search_params({:brand_id_is => brand.id}))
  
  %h3 Timeframe
  %ul
    %li= link_to "Today", brand_results_path(time_filter("today"))
    %li= link_to "Yesterday", brand_results_path(time_filter("yesterday"))
    %li= link_to "This Week", brand_results_path(time_filter("this week"))
    %li= link_to "Last week", brand_results_path(time_filter("last week"))
    %li= link_to "This month", brand_results_path(time_filter("this month"))
    %li= link_to "Last month", brand_results_path(time_filter("last month"))
    %li= link_to "Any time", brand_results_path(time_filter)

#content
  #entries
    = page_entries_info @brand_results, :entry_name => "result"
  - if @brand_results && !@brand_results.empty?
    %table#results.index
      %tbody
        - @brand_results.each do |brand_result|
          = render "brand_result", :object => present_brand_result(brand_result)

  = will_paginate @brand_results, :previous_label => '&laquo; Newer', :next_label => 'Older &raquo;'