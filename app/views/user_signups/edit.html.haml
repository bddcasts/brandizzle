- title "Setup your account"

.content
  - semantic_form_for @user, :url => user_signup_path(:id => @user.perishable_token), :html => { :class => "account large" } do |f|
    - f.inputs do
      = f.input :password
      = f.input :password_confirmation
      = f.input :tos_agreement, :as => :boolean, :label => 'I agree to the <a href="http://getbrandpulse.com/terms-of-use" target="_blank">terms of use</a>.'
      - f.fields_for :user_detail do |user_detail|
        = user_detail.input :email_updates, :required => false, :label => "I want to receive updates through email."
    - f.buttons do
      = f.commit_button "Set up my account and log me in"