.inner
  %h2 Login
  
  .span-12
    - semantic_form_for @user_session, :url => user_session_path do |f|
      - f.inputs do
        %li= f.errors_on(:base)
        = f.input :login
        = f.input :password
      - f.buttons do
        = f.commit_button "Login"

    = link_to "Forgot your password?", new_password_reset_path