- title "Login"

.content
  - semantic_form_for @user_session, :url => user_session_path, :html => { :class => "account" } do |f|
    - f.inputs do
      %li.inline-error= f.errors_on(:base)
      = f.input :login
      = f.input :password
    - f.buttons do
      = f.commit_button "Login"
      or
      = link_to "Forgot your password?", new_password_reset_path
  
  - semantic_form_for @user_session, :url => user_session_path, :html => { :class => "account" } do |f|
    - f.buttons "Twitter" do
      = oauth_login_button :value => "Login with Twitter"